	// СтандартныеПодсистемы.ПодключаемыеКоманды
	ПодключаемыеКоманды.ПриСозданииНаСервере(ЭтотОбъект);
	// Конец СтандартныеПодсистемы.ПодключаемыеКоманды
	
	// ++Ливенцев Ливенцев ДЗ homework-13-7 13.09.2025
	ЭлементГруппаСкидкаИПересчитать = Элементы.Добавить("СкидкаИПересчитать", Тип("ГруппаФормы"), Элементы.ГруппаШапкаЛево);
	ЭлементГруппаСкидкаИПересчитать.Вид = ВидГруппыФормы.ОбычнаяГруппа;
	ЭлементГруппаСкидкаИПересчитать.Отображение = ОтображениеОбычнойГруппы.Нет;
	ЭлементГруппаСкидкаИПересчитать.Группировка = ГруппировкаПодчиненныхЭлементовФормы.ГоризонтальнаяВсегда; 
	ЭлементГруппаСкидкаИПересчитать.ОтображатьЗаголовок = Ложь;
		
	ЭлементСогласованнаяСкидка = Элементы.Добавить("ДЗ_СогласованнаяСкидка", Тип("ПолеФормы"), Элементы.СкидкаИПересчитать);
	ЭлементСогласованнаяСкидка.Вид = ВидПоляФормы.ПолеВвода;
	ЭлементСогласованнаяСкидка.КнопкаВыбора = "Нет";
	ЭлементСогласованнаяСкидка.ПутьКДанным = "Объект.ДЗ_СогласованнаяСкидка";
	ЭлементСогласованнаяСкидка.Заголовок = "Согласованная скидка";
	ЭлементСогласованнаяСкидка.УстановитьДействие("ПриИзменении", "ДЗ_СогласованнаяСкидкаПриИзменении"); 
		
	Команда = Команды.Добавить("ПересчитатьТаблицу");
	Команда.Заголовок = "Пересчитать таблицу";
	Команда.Действие = "ДЗПересчитатьТаблицу";
	
	КнопкаФормы = Элементы.Вставить("ПересчитатьТаблицу", Тип("КнопкаФормы"), Элементы.СкидкаИПересчитать);
	КнопкаФормы.ИмяКоманды = "ПересчитатьТаблицу";
	КнопкаФормы.Вид = ВидКнопкиФормы.ОбычнаяКнопка;
	КнопкаФормы.Картинка = БиблиотекаКартинок.Перечитать;
	КнопкаФормы.Отображение = ОтображениеКнопки.КартинкаИТекст;
	
	ЭлементКонтактноеЛицо = Элементы.Добавить("ДЗ_КонтактныеЛица", Тип("ПолеФормы"), Элементы.ГруппаШапкаПраво);
	ЭлементКонтактноеЛицо.Вид = ВидПоляФормы.ПолеВвода;
	ЭлементКонтактноеЛицо.ПутьКДанным = "Объект.ДЗ_КонтактныеЛица";
	ЭлементКонтактноеЛицо.Заголовок = "Контактное лицо";
	// --Ливенцев ДЗ homework-13-7 13.09.2025
	
